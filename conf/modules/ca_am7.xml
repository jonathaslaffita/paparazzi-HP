<!DOCTYPE module SYSTEM "module.dtd">
<module name="ca_am7" dir="sensors">
  <doc>
    <description>Transfers telemetry data X to the autopilot and if you wish groundstation</description>
  </doc>
  <header>
    <file name="ca_am7.h"/>
  </header>
  <init fun="am7_init()"/>
<!--  <periodic fun="am7_periodic()" autorun="TRUE" freq="500"/>-->
  <event fun="am7_event()"/>
  <makefile>
<!--       Configure default UART port and baudrate-->
    <configure name="AM7_PORT" default="UART4" case="upper|lower"/>
    <configure name="AM7_BAUD" default="B460800"/>
    <!-- Enable UART and set baudrate -->
    <define name="USE_$(AM7_PORT_UPPER)"/>
    <define name="USE_$(AM7_PORT_UPPER)_TX" value="TRUE"/>
    <define name="$(AM7_PORT_UPPER)_BAUD" value="$(AM7_BAUD)"/>
    <define name="AM7_PORT" value="$(AM7_PORT_LOWER)"/>
    <file name="ca_am7.c" dir="modules/sensors"/>
    <file name="pprz_transport.c" dir="pprzlink/src"/>
  </makefile>
</module>