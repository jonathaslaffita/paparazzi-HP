<!DOCTYPE airframe SYSTEM "../airframe.dtd">

<!-- This is jonathas over-actuated
     * Airframe:    TUD00???
     * Autopilot:   Pixhawk 4
     * Actuators:   4x motor and esc
     * Datalink:    sik
     * GPS:         UBlox M8N
     * RC:          SBUS 
-->

<airframe name="jonathas_copy">
  <description>copyofSplash4</description>

  <firmware name="rotorcraft">
    <target name="ap" board="px4fmu_5.0_chibios">
      <configure name="PERIODIC_FREQUENCY"  value="500"/>
      <!-- <configure name="FLASH_MODE" value="SWD"/> -->
      <define name="USE_BARO_BOARD" value="1"/>
      <module name="radio_control" type="sbus">
        <configure name="SBUS_PORT" value="UART3"/>
      </module>

      <!-- Logger -->
      <module name="tlsf"/>
      <module name="pprzlog"/>
      <module name="logger" type="sd_chibios"/>
      <module name="flight_recorder"/>
      <!-- <module name="sys_mon"/> -->


      <define name="RADIO_TH_HOLD"     value="RADIO_AUX2"/>
      <define name="RADIO_FMODE"       value="RADIO_MODE"/> <!-- Throttle curve select -->
      <define name="RADIO_KILL_SWITCH" value="RADIO_AUX1"/>
          
      
    </target>

    <target name="nps" board="pc">
      <module name="radio_control" type="datalink"/>
      <module name="fdm" type="jsbsim"/>

      <module name="logger_file">
        <define name="FILE_LOGGER_PATH" value="/home/jonathas/Documents"/>
      </module>

      <define name="RADIO_TH_HOLD"     value="-10"/> 
      <!-- <define name="RADIO_KILL_SWITCH" value="0"/> -->
    </target>

    <module name="telemetry"     type="transparent">
      <!-- <configure name="MODEM_BAUD" value="B115200"/> -->
    </module>

    <module name="ins" type="extended" />

    <module name="actuators"     type="pwm">
        <define name="SERVO_HZ" value="400" />
    </module>
    <module name="imu"           type="mpu6000"/>
    
    <module name="gps"           type="datalink"/>

    <!-- <define name="USE_AHRS_GPS_ACCELERATIONS" value="TRUE"/> -->

    <module name="airborne_docking_overactuated"/>

    
    <module name="ahrs" type="int_cmpl_quat">
      <define name="USE_MAGNETOMETER" value="FALSE"/>
      <define name="AHRS_USE_GPS_HEADING" value="TRUE"/>
      <define name="AHRS_HEADING_UPDATE_GPS_MIN_SPEED" value="0" unit="m/s"/>
    </module>

      
   <module name="ca_am7"/>
   
    <!-- <module name="gps"           type="ublox">
      <configure name="GPS_BAUD" value="B57600"/>
    </module> -->
    
    
    <module name="stabilization" type="indi">
      <!--define name="TILT_TWIST_CTRL" value="TRUE"/-->
    </module>
    
    <module name="guidance" type="indi">
      <define name="GUIDANCE_INDI_POS_GAIN" value="0.5"/>
      <define name="GUIDANCE_INDI_SPEED_GAIN" value="1.8"/> 
      <define name="GUIDANCE_INDI_RC_DEBUG" value="FALSE"/> 
      <define name="GUIDANCE_INDI_OVERACT_SIDE_BASE" value="2070"/> 
      <!-- <define name="GUIDANCE_INDI_THRUST_DYNAMICS" value="0.0354"/> -->
    </module> 

    <module name="air_data"/>

    <!-- <module name="send_imu_mag_current"/> -->

    <!-- Internal MAG -->
    <!-- <module name="mag_ist8310">
      <define name="MODULE_IST8310_UPDATE_AHRS" value="TRUE"/>
      <configure name="MAG_IST8310_I2C_DEV" value="I2C3"/>
    </module> -->


    <!-- External MAG on GPS -->
    <module name="mag_ist8310">
      <define name="MODULE_IST8310_UPDATE_AHRS" value="FALSE"/>                    
      <configure name="MAG_IST8310_I2C_DEV" value="I2C1"/> 
      <!-- <define name="IST8310_CHAN_X_SIGN" value="-"/>
      <define name="IST8310_CHAN_Y_SIGN" value="-"/> -->
    </module>
   
    <!-- <module name="motor_mixing"/> -->

  </firmware>

  <servos driver="Pwm">
    <servo name="TOP_LEFT" no="2" min="1000" neutral="1150" max="2000"/>
    <servo name="TOP_RIGHT" no="0" min="1000" neutral="1150" max="2000"/>
    <servo name="BOTTOM_RIGHT" no="3" min="1000" neutral="1150" max="2000"/>
    <servo name="BOTTOM_LEFT" no="1" min="1000" neutral="1150" max="2000"/>
    <servo name="LEFT_SIDE" no="4" min="1000" neutral="1150" max="2000"/> 
    <servo name="RIGHT_SIDE" no="6" min="1000" neutral="1150" max="2000"/> 
    <servo name="BACK_SIDE" no="5" min="1000" neutral="1500" max="2000"/> 

  </servos>

  <commands>
    <axis name="ROLL"   failsafe_value="0"/>
    <axis name="PITCH"  failsafe_value="0"/>
    <axis name="YAW"    failsafe_value="0"/>
    <axis name="THRUST" failsafe_value="0"/>
    <axis name="AUX1" failsafe_value="-9600"/>
  </commands>

  <rc_commands>
    <set command="THRUST" value="@THROTTLE" />
    <set command="ROLL" value="@ROLL" />
    <set command="PITCH" value="@PITCH" />
    <set command="YAW" value="@YAW" />
  </rc_commands>

  <!-- <section name="MIXING" prefix="MOTOR_MIXING_">
    <define name="TYPE" value="QUAD_X"/>
    <define name="REVERSE" value="true"/>
  </section> -->

  <command_laws>

  <let var="th_hold"     value="Or(LessThan(RadioControlValues(RADIO_TH_HOLD), -4800), !autopilot_get_motors_on())"/>
           
    
    <set servo="TOP_LEFT"   value="autopilot_get_motors_on() ? actuators_pprz[2] : -MAX_PPRZ"/>
    <set servo="TOP_RIGHT"   value="autopilot_get_motors_on() ? actuators_pprz[0] : -MAX_PPRZ"/>
    <set servo="BOTTOM_RIGHT"   value="autopilot_get_motors_on() ? actuators_pprz[3] : -MAX_PPRZ"/>
    <set servo="BOTTOM_LEFT"   value="autopilot_get_motors_on() ? actuators_pprz[1] : -MAX_PPRZ"/>
    <set servo="LEFT_SIDE" value="(autopilot_get_motors_on() ? ($th_hold? -MAX_PPRZ : actuators_pprz[4]) : -MAX_PPRZ)"/> <!--(autopilot_get_motors_on() ? ($th_hold? -MAX_PPRZ : actuators_pprz[6]) : -MAX_PPRZ)"/> -->
    <set servo="RIGHT_SIDE" value="(autopilot_get_motors_on() ? ($th_hold? -MAX_PPRZ : actuators_pprz[5]) : -MAX_PPRZ)"/><!--(autopilot_get_motors_on() ? ($th_hold? -MAX_PPRZ : actuators_pprz[6]) : -MAX_PPRZ)"/> -->
    <set servo="BACK_SIDE" value="(autopilot_get_motors_on() ? ($th_hold? 0 : actuators_pprz[6]) : 0)"/><!--(autopilot_get_motors_on() ? ($th_hold? -MAX_PPRZ : actuators_pprz[6]) : -MAX_PPRZ)"/> -->
        
  </command_laws>

